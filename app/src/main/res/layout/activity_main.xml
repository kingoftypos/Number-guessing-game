<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#CDDC39"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Choose the digit of the number you want to guess??"
        android:textColor="#982626"
        android:textStyle="bold"
        android:textSize="40dp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two-digit"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:id="@+id/btn2dig"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Three-digit"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:id="@+id/btn3dig"
        tools:ignore="MissingPrefix" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Four-digit"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:id="@+id/btn4dig"/>
    </RadioGroup>
<Button
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/playbtn"
    android:layout_margin="15dp"
    android:text="PLAY"
    android:textSize="30dp"/>





</LinearLayout>